{
	"name": "@logoi/blog",
	"version": "0.0.1",
	"type": "module",
	"private": true,
	"license": "GPL-3.0-only",
	"scripts": {
		"dev": "vite dev --host",
		"populate-db": "tsc ./src/scripts/populate-db.ts",
		"build": "vite build",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"check:types": "tsc --noEmit",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"react:build": "cd ./react && yarn build && cd ../ && yarn react:copy",
		"react:copy": "cp -R ./react/dist/ ./static/react",
		"react:rebuild": "yarn react:build && yarn dev",
		"ci": "yarn format && yarn lint && yarn check",
		"prepare": "husky install"
	},
	"dependencies": {
		"@types/qrcode": "^1.5.5",
		"@vercel/postgres": "^0.7.2",
		"canvg": "^4.0.1",
		"clsx": "^2.1.0",
		"nanoid": "^5.0.4",
		"pg": "^8.11.3",
		"qrcode": "^1.5.3",
		"reflect-metadata": "^0.1.13",
		"sqlite": "^5.1.1",
		"sqlite3": "^5.0.2",
		"stripe": "^14.14.0",
		"svelte-stripe": "^1.1.3",
		"typeorm": "0.3.20"
	},
	"devDependencies": {
		"@playwright/test": "^1.41.1",
		"@sveltejs/adapter-auto": "^3.1.1",
		"@sveltejs/kit": "^2.5.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@typescript-eslint/eslint-plugin": "^6.19.1",
		"@typescript-eslint/parser": "^6.19.1",
		"autoprefixer": "^10.4.17",
		"dotenv": "^16.4.1",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"husky": "^9.0.6",
		"postcss": "^8.4.33",
		"prettier": "^3.2.4",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^4.2.9",
		"svelte-check": "^3.6.3",
		"tailwindcss": "^3.4.1",
		"tslib": "^2.6.2",
		"typescript": "^5.3.3",
		"vite": "^5.0.12",
		"vitest": "^1.2.2"
	}
}
