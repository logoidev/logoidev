{
	"name": "@logoi/blog",
	"version": "0.0.1",
	"type": "module",
	"private": true,
	"license": "GPL-3.0-only",
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": "22.17.0",
    "pnpm": "10.12.1"
  },
	"scripts": {
		"start": "pnpm dev",
		"dev:live": "concurrently --names 'app,partykit' 'WITH_PARTYKIT=true pnpm dev' 'pnpm dev:partykit'",
		"dev": "vite dev --host",
		"dev:partykit": "partykit dev",
		"deploy:partykit": "partykit deploy",
		"populate-db": "tsc ./src/scripts/populate-db.ts",
		"build:local": "vite build",
		"build:vercel": "corepack enable && pnpm install && pnpm build:local",
		"build": "pnpm build:vercel",
		"preview": "vite preview",
		"test": "concurrently --kill-others-on-fail --names 'e2e,unit' \"pnpm run test:e2e\" \"pnpm run test:unit\"",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"check:types": "tsc --noEmit",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:e2e": "pnpm exec playwright test",
		"test:unit": "pnpm exec vitest run",
		"test:unit:watch": "pnpm exec vitest watch",
		"ci": "pnpm run format && pnpm run lint && pnpm run check",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage"
	},
	"dependencies": {
		"@stripe/stripe-js": "^7.4.0",
		"@sveltejs/adapter-vercel": "^5.5.3",
		"@types/qrcode": "^1.5.5",
		"@vercel/postgres": "^0.7.2",
		"canvas-confetti": "^1.9.3",
		"canvg": "^4.0.2",
		"clsx": "^2.1.1",
		"decimal.js": "^10.4.3",
		"marked": "^15.0.7",
		"nanoid": "^5.1.2",
		"openai": "^5.3.0",
		"partysocket": "1.1.3",
		"pg": "^8.13.1",
		"posthog-js": "^1.207.2",
		"posthog-node": "^4.8.1",
		"qrcode": "^1.5.4",
		"reflect-metadata": "^0.1.13",
		"stripe": "^18.3.0",
		"svelte-stripe": "^1.3.0",
		"tailwind-merge": "^3.0.2",
		"typeorm": "0.3.20",
		"zod": "^3.24.3"
	},
	"devDependencies": {
		"@playwright/test": "^1.48.2",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/adapter-vercel": "^5.5.3",
		"@sveltejs/kit": "^2.8.2",
		"@sveltejs/vite-plugin-svelte": "^4.0.1",
		"@tailwindcss/typography": "^0.5.15",
		"@types/eslint": "^9.6.1",
		"@types/node": "^22.10.5",
		"@types/pg": "^8.11.10",
		"@typescript-eslint/eslint-plugin": "^8.15.0",
		"@typescript-eslint/parser": "^8.15.0",
		"autoprefixer": "^10.4.20",
		"concurrently": "^9.1.0",
		"eslint": "^9.15.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.0",
		"partykit": "0.0.115",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.3.2",
		"svelte": "^5.17.1",
		"svelte-check": "^4.0.8",
		"tailwindcss": "^3.4.16",
		"typescript": "^5.7.2",
		"vite": "^6.0.7",
		"vitest": "^2.1.8",
		"@vitest/ui": "^2.1.8",
		"jsdom": "^25.0.1"
	}
}
