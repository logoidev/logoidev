{
	"name": "@logoi/blog",
	"version": "0.0.1",
	"type": "module",
	"private": true,
	"license": "GPL-3.0-only",
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": "22.17.0",
    "pnpm": "10.12.1"
  },
	"scripts": {
		"start": "pnpm dev",
		"dev:live": "concurrently --names 'app,partykit' 'WITH_PARTYKIT=true pnpm dev' 'pnpm dev:partykit'",
		"dev": "vite dev --host",
		"dev:partykit": "partykit dev",
		"deploy:partykit": "partykit deploy",
		"populate-db": "tsc ./src/scripts/populate-db.ts",
		"build:local": "vite build",
		"build:vercel": "corepack enable && pnpm install && pnpm build:local",
		"build": "pnpm build:vercel",
		"preview": "vite preview",
		"test": "concurrently --kill-others-on-fail --names 'e2e,unit' \"pnpm run test:e2e\" \"pnpm run test:unit\"",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"check:types": "tsc --noEmit",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:e2e": "pnpm exec playwright test",
		"test:unit": "pnpm exec vitest run",
		"test:unit:watch": "pnpm exec vitest watch",
		"ci": "pnpm run format && pnpm run lint && pnpm run check"
	},
	"dependencies": {
		"@stripe/stripe-js": "^3.5.0",
		"@sveltejs/adapter-vercel": "^5.5.3",
		"@types/qrcode": "^1.5.5",
		"@vercel/postgres": "^0.7.2",
		"canvas-confetti": "^1.9.3",
		"canvg": "^4.0.2",
		"clsx": "^2.1.1",
		"marked": "^15.0.7",
		"nanoid": "^5.1.2",
		"openai": "^5.3.0",
		"partysocket": "1.1.3",
		"pg": "^8.13.1",
		"posthog-js": "^1.207.2",
		"posthog-node": "^4.8.1",
		"qrcode": "^1.5.4",
		"reflect-metadata": "^0.1.13",
		"stripe": "^17.5.0",
		"svelte-stripe": "^1.3.0",
		"tailwind-merge": "^3.0.2",
		"typeorm": "0.3.20",
		"zod": "^3.24.3"
	},
	"devDependencies": {
		"@playwright/test": "^1.49.1",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/kit": "^2.16.1",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@tailwindcss/typography": "^0.5.16",
		"@types/canvas-confetti": "^1.9.0",
		"@typescript-eslint/eslint-plugin": "^6.19.1",
		"@typescript-eslint/parser": "^6.19.1",
		"autoprefixer": "^10.4.20",
		"concurrently": "^9.1.2",
		"dotenv": "^16.4.7",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"partykit": "0.0.114",
		"postcss": "^8.5.1",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "^4.2.18",
		"svelte-check": "^3.8.6",
		"tailwindcss": "^3.4.17",
		"tslib": "^2.8.1",
		"typescript": "^5.7.3",
		"vite": "^5.1.8",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^1.6.1"
	}
}
